<div class='mt-3 mb-5 user-index-card'>
  <div class="mt-3 mb-5 container user-index-table">

    <div class="table-responsive">

      <table id ="dashboard_user" class="table table-striped table-hover table-sm">
        <h1>Top <%= current_user %> </h1>
        <thead>
          <th>Name</th>
          <th>Role</th>
          <th>Email</th>
          <th>Hire Date</th>
        </thead>

        <tbody>
          <% @profile.each do |profile| %>

          <tr>
            <td>
              <%= image_tag profile.photo, class: 'avatar-small mr-2' %>
              <%= profile.first_name %> <%= profile.last_name %>
            </td>
            <td>
              <%=profile.role %>
            </td>
            <td>
              <%=profile.email %>
            </td>
            <td>
              <%=profile.hire_date %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




